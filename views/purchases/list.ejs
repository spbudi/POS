<%- include('../partials/header') %>

<div id="wrapper">
  <%- include('../partials/sidebar') %>
  <div id="content-wrapper" class="d-flex flex-column">
    <div id="content">
      <%- include('../partials/topbar') %>
      <div class="container-fluid">
        <!-- Page Heading -->
        <h1 class="h3 mb-2 text-gray-800">Purchases</h1>
        <p class="mb-4">This is data of Purchases</p>
        <%- include('../partials/alert') %>
        <!-- DataTales Example -->
        <div class="card shadow mb-4">
          <div class="card-header py-3">
            <a class="btn-group" href="/purchases/create">
              <span class="btn btn-primary active" aria-current="page">
                <i class="fa-sharp fa-solid fa-plus"></i
              ></span>
              <span class="btn btn-primary">Add</span>
